{erl_opts,
 [ debug_info
 , {parse_transform, purerl_optimiser}
 ]}.

{deps, [ {purerl_optimiser, {git,"https://github.com/id3as/purerl-optimiser.git", {branch, main}}}
       ]}.

{pre_hooks,
 [ {"(linux|darwin|solaris|win32)", compile, "bash -c 'cd .. && make'"}
 , {"(linux|darwin|solaris|win32)", clean, "cd .. && make clean"}
 ]}.
